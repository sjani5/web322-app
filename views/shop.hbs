<h2>{{data.post.title}}</h2>

<article class="post">
  <img src="{{data.post.featureImage}}" alt="Feature Image">

  <p>{{{safeHTML data.post.body}}}</p>

  <p>Category: {{data.post.category}}</p>
  <p>Price: {{data.post.price}}</p>
  <p>Last Updated: {{data.post.postDate}}</p>
</article>

{{#if data.posts}}
  <h4>Items</h4>
  <ul>
    {{#each data.posts}}
      <li><a href="/shop/{{id}}?category={{../viewingCategory}}">{{title}}</a></li>
    {{/each}}
  </ul>
{{/if}}

{{#if data.categories}}
  <h4>Categories</h4>
  <ul>
    {{#each data.categories}}
      <li><a href="/shop?category={{id}}">{{name}}</a></li>
    {{/each}}
  </ul>
{{/if}}

{{#if data.post}}
  <item>...</item>
{{else}}
  <div class="col-md-12 text-center">
    <h2>{{data.message}}</h2>
    <p>Please try another Post / Category</p>
  </div>
{{/if}}
